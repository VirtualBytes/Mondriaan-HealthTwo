{% extends 'base.html.twig' %}

{% block title %}Recept index{% endblock %}

{% block body %}
    <h1>Recept index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datum</th>
                <th>Periode</th>
                <th>Dosis</th>
                <th>Prijs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recept in recepts %}
            <tr>
                <td>{{ recept.id }}</td>
                <td>{{ recept.datum ? recept.datum|date('Y-m-d') : '' }}</td>
                <td>{{ recept.periode }}</td>
                <td>{{ recept.dosis }}</td>
                <td>{{ recept.prijs }}</td>
                <td>
                    <a href="{{ path('recept_show', {'id': recept.id}) }}">show</a>
                    <a href="{{ path('recept_edit', {'id': recept.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recept_new') }}">Create new</a>
{% endblock %}
