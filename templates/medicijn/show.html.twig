        <a class="p-2 list-group-item list-group-item-action" href="{{ path('medicijn_index') }}"> <i class="fas fa-prescription-bottle-alt"></i></i> Medicijnen </a>
        <a class="p-2 list-group-item list-group-item-action" href="{{ path('recepten') }}"> <i class="fas fa-file-medical"></i> Recepten </a>
